<div class="col-sm-6 col-sm-offset-3" id="clearance" class="sign-up">

<%= form_for(current_user) do |form| %>


<div id="paintings">
  <div class="painting">
    <%= image_tag current_user.image_url.to_s() if current_user.image? %>

  <%= form.file_field :image  %>
  <label>
    <%= form.check_box :remove_image %>
    Remove image
  </label>
  <div class="clear"></div>
  </div>
</div>



<div class="form-group " >
 <%= form.label :first_name %>
 <%= form.text_field :first_name, type: "text", class: "form-control" %>
</div>

<div class="form-group ">
 <%= form.label :last_name %>
 <%= form.text_field :last_name, type: "text", class: "form-control" %>
</div>

<div>
  <%= form.submit class: "btn btn-success" %>

</div>

<%end%>
</div>

